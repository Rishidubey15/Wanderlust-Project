<div id="filters">
    <button id="filterToggle" class="dropdown-toggle">Show Filters</button>
    <div id="filter-container">
      <div class="filter <%= type === 'trending' ? 'active' : '' %>" data-type="trending" onclick="filterListings('trending')">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      <div class="filter <%= type === 'farms' ? 'active' : '' %>" data-type="farms" onclick="filterListings('farms')">
        <i class="fa-solid fa-tractor"></i>
        <p>Farms</p>
      </div>
      <div class="filter <%= type === 'beach' ? 'active' : '' %>" data-type="beach" onclick="filterListings('beach')">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Beach</p>
      </div>
      <div class="filter <%= type === 'iconic city' ? 'active' : '' %>" data-type="iconic city" onclick="filterListings('iconic city')">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic City</p>
      </div>
      <div class="filter <%= type === 'castle' ? 'active' : '' %>" data-type="castle" onclick="filterListings('castle')">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castle</p>
      </div>
      <div class="filter <%= type === 'mountain' ? 'active' : '' %>" data-type="mountain" onclick="filterListings('mountain')">
        <i class="fa-solid fa-mountain-sun"></i>
        <p>Mountain</p>
      </div>
      <div class="filter <%= type === 'arctic' ? 'active' : '' %>" data-type="arctic" onclick="filterListings('arctic')">
        <i class="fa-solid fa-snowflake"></i>
        <p>Arctic</p>
      </div>
      <div class="filter <%= type === 'dome' ? 'active' : '' %>" data-type="dome" onclick="filterListings('dome')">
        <i class="fa-solid fa-landmark-dome"></i>
        <p>Dome</p>
      </div>
      <div class="filter <%= type === 'camps' ? 'active' : '' %>" data-type="camps" onclick="filterListings('camps')">
        <i class="fa-solid fa-campground"></i>
        <p>Camps</p>
      </div>
      <div class="filter <%= type === 'rooms' ? 'active' : '' %>" data-type="rooms" onclick="filterListings('rooms')">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
      <div class="filter <%= type === 'pools' ? 'active' : '' %>" data-type="pools" onclick="filterListings('pools')">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Pools</p>
      </div>
      <div class="filter <%= type === 'igloo' ? 'active' : '' %>" data-type="igloo" onclick="filterListings('igloo')">
        <i class="fa-solid fa-igloo"></i>
        <p>Igloo</p>
      </div>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
          onchange="toggleGST(this)"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault">
          Display taxes
        </label>
      </div>
    </div>
  </div>